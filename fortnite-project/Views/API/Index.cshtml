
@{
    ViewBag.Title = "Index";
}

<section id="player-search">
    <h1 class="tracking-in-contract">
        Player Search
    </h1>
    <h2>
        Enter the Epic Username of any Fortnite player below to reveal their stats.
    </h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="form-row" id="username-input">
                    <div class="input-group input-group-sm col-lg-6 mx-auto mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                Epic Username
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="..." aria-describedby="basic-addon1" id="epic-username-input">
                    </div>
                </div>
                <br />
                <button class="btn btn-primary" id="player-search-button">Search</button>
            </div>
            <div class="col-lg-1">
            </div>
        </div>
    </div>
</section>
<section class="row" id="search-stats-display">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div id="player-stats">

        </div>
    </div>
    <div class="col-lg-2"></div>
</section>

