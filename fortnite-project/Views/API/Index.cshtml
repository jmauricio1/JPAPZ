
@{
    ViewBag.Title = "Index";
}

<section id="player-search">
    <h1 class="tracking-in-contract">
        Player Search
    </h1>
    <h2>
        Enter the Epic Username of any Fortnite player below to reveal their stats.
    </h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="form-row">
                    <div class="input-group input-group-sm col-lg-6 mx-auto mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"> Epic Username
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="Email" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="col-lg-1">
            </div>
        </div>
    </div>
</section>

<div class="container jumbotron" id="stats-jumbo">
    <div class="container">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <h1 class="white-txt">Find player stats</h1>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Epic Games Username" aria-label="Recipient's username" aria-describedby="button-addon2" id="epic-username-input" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" id="player-search-button">Search</button>
                    </div>
                </div>
                <p><em>(Powered by Fortnite Tracker)</em></p>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

    <div class="container">
        <div id="player-stats">

        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="~/Scripts/js/api.js"></script>
}